<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background" />

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">
        <!--底部菜单-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:layout_height="45dp">

            <LinearLayout
                android:id="@+id/ll_bot_sheet_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_bot_sheet_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/bot_home1_selector"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tv_bot_sheet_1"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:clickable="false"
                    android:gravity="center_horizontal|top"
                    android:paddingTop="3dp"
                    android:text="@string/carInsuranceCalculate"
                    android:textColor="@drawable/bot_home_text_selector"
                    android:textSize="@dimen/txt_xs" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bot_sheet_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_bot_sheet_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/bot_home2_selector"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tv_bot_sheet_2"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:clickable="false"
                    android:gravity="center_horizontal|top"
                    android:paddingTop="3dp"
                    android:text="@string/orderManager"
                    android:textColor="@drawable/bot_home_text_selector"
                    android:textSize="@dimen/txt_xs" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bot_sheet_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_bot_sheet_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/bot_home3_selector"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tv_bot_sheet_3"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:clickable="false"
                    android:gravity="center_horizontal|top"
                    android:paddingTop="3dp"
                    android:text="@string/photoUpload"
                    android:textColor="@drawable/bot_home_text_selector"
                    android:textSize="@dimen/txt_xs" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bot_sheet_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ib_bot_sheet_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/bot_home4_selector"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tv_bot_sheet_4"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:clickable="false"
                    android:gravity="center_horizontal|top"
                    android:paddingTop="3dp"
                    android:text="@string/personal"
                    android:textColor="@drawable/bot_home_text_selector"
                    android:textSize="@dimen/txt_xs" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
